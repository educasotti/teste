@model Web.Models.StatusViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Acicionar Status</h2>
<div class="box-body">

    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
            {
        @Html.AntiForgeryToken()

        if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
        {
            <div class="alert alert-error">
                @Html.ValidationSummary("")
            </div>
        }

        <div class="form-group">
            @Html.Label("Descrição", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control required" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

              
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary"> <span class="glyphicon glyphicon-floppy-disk"></span> Salvar </button>
                    </div>
                </div>
    }

</div>